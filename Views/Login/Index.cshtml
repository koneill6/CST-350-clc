@model Milestone_cst_350.Models.UserModel

<h4 class="text-center pg-title">Login</h4>

<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="ShowLogin" class="fm-style text-center p-4 mt-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="fm-gp-style">
                    <label asp-for="Username" class="control-label ml-2"></label>
                    <input asp-for="Username" class="form-control" />
                </div>

                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="fm-gp-style">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" type="password" class="form-control" />
                </div>

                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary btn-style" />
            </div>
        </form>
    </div>
</div>
<br />
<div class="text-center form-btm">
    <p>Don't have an account? Click <a asp-controller="Register" asp-action="Index"><ef>here</ef></a> to create one.</p>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
